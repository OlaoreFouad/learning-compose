<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.olaore.learningcompose">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearningCompose">
        <activity
            android:name=".ui.state.StateActivity"
            android:exported="false"
            android:label="@string/title_activity_state"
            android:theme="@style/Theme.LearningCompose.NoActionBar"/>
        <activity
            android:name=".ui.state.todo.TodoActivity"
            android:exported="true"
            android:label="@string/title_activity_todo"
            android:theme="@style/Theme.LearningCompose.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.layouts.ConstraintLayoutActivity"
            android:exported="false"
            android:label="@string/title_activity_constraint_layout"
            android:theme="@style/Theme.LearningCompose.NoActionBar" />
        <activity
            android:name=".ui.layouts.CustomLayoutsActivity"
            android:exported="false"
            android:label="@string/title_activity_custom_layouts"
            android:theme="@style/Theme.LearningCompose.NoActionBar" />
        <activity
            android:name=".ui.layouts.LayoutsListActivity"
            android:exported="false"
            android:label="@string/title_activity_layouts_list"
            android:theme="@style/Theme.LearningCompose.NoActionBar" />
        <activity
            android:name=".ui.layouts.LayoutsCodelabActivity"
            android:exported="false"
            android:label="@string/title_activity_layouts_codelab"
            android:theme="@style/Theme.LearningCompose.NoActionBar" />
        <activity
            android:name=".ui.layouts.LayoutsActivity"
            android:exported="false"
            android:label="@string/title_activity_layouts"
            android:theme="@style/Theme.LearningCompose.NoActionBar" />
        <activity
            android:name=".ui.components.Home"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.LearningCompose.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.LearningCompose.NoActionBar" />
    </application>

</manifest>